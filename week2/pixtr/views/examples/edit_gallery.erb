<h2>Edit this gallery</h2>

<form action="/galleries/<%= @gallery_id %>" method="POST">
  <input type="hidden" name="_method" value="PUT">

  <div>
    <label>Gallery Name: </label>
    <input type="text" name="gallery[name]" value="<%= gallery.name %>">
  </div>

  <div>
    <label>Gallery Description: </label>
    <input type="text" name="gallery[description]" value="<%= gallery.description %>">
  </div>

  <input type="submit" value="Update Gallery">
</form>
